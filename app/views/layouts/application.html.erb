<!DOCTYPE html>
<html>
<head>
  <title>BurningAirlines</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav>
        <%= link_to"Home", root_path %>
        <% if @current_user.present? %>
            <%= link_to "Edit profile", edit_user_path(@current_user) %>
            <%= link_to "Logout #{ @current_user.email}", login_path, :method => :delete %>
            <% if @current_user.admin.present? %>
                <br>
                <%= link_to 'Add Plane', new_plane_path %>
                <%= link_to 'Add Flight', new_flight_path %>
            <% end %>
        <% else %>
            <%= link_to "Signup", 'users/new' %>
            <%= link_to "Login", login_path %>
        <% end %>
    </nav>

    <% if flash[:error].present? %>
  <h2 class="error">
    <%= flash[:error] %>
  </h2>
    <% end %>

<%= yield %>



</body>
</html>
