<!DOCTYPE html>
<html>
<head>
  <title>BurningAirlines</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-inverse">
      <div class="navbar-header">
        <a class="navbar-brand">

          <img src="/assets/planeicon.png" alt="icon" height="42" width="42">

          <%= image_tag "planeicon.png", { :height => "42",  :width => "42" } %>


        </a>
      </div>
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to "Home", root_path %></li>
          <li> <%= link_to "FAQ", "faq" %></li>
        </ul>
        </div>
        <ul class="nav navbar-nav navbar-middle"></ul>
        <% if @current_user.present? %>
            <li><%= link_to "Edit profile", edit_user_path(@current_user) %></li>
            <li><%= link_to "Logout #{ @current_user.email}", login_path, :method => :delete %></li>
            <% if @current_user.admin.present? %>
                <br>
                <li><%= link_to 'Add Plane', new_plane_path %></li>
                <li><%= link_to 'Add Flight', new_flight_path %></li>
            <% end %>
        <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li><span class="glyphicon glyphicon-user"></span> <%= link_to "Sign up", 'users/new' %></li>
          <li><span class="glyphicon glyphicon-log-in"></span> <%= link_to "Login", login_path %></li>
        </ul>
        <% end %>

    </nav>

    <% if flash[:error].present? %>
  <h2 class="error">
    <%= flash[:error] %>
  </h2>
    <% end %>

<%= yield %>



</body>
</html>
